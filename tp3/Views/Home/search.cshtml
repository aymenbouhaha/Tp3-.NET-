@model tp3.Models.Person

@{
    ViewData["Title"] = "Search";
}
<div style="display: flex;justify-content:space-evenly; align-items:center;width:100% ">
    <h1>Search</h1>
    <h3>
        <a asp-action="allPerson">ALL Persons</a>
    </h3>
</div>


@{
    if (ViewBag.notFound )
    {
        <div style="padding: 20px; border-radius:10px; text-align:center" class="alert-danger">
        THIS PERSON IS NOT FOUND PLEASE VERIFY YOUR INFORMATIONS
        </div>
    }
}
<h4>Person</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="search">
            <div class="form-group">
                <label  asp-for="firstName" class="control-label">First Name</label>
                <input name="firstName" asp-for="firstName" class="form-control" />
            </div>


            <div class="form-group">
                <label asp-for="country" class="control-label">Country</label>
                <input name="country" asp-for="country" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="SEARCH" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>